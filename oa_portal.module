function oa_portal_soap($method, $params) {
  ini_set('display_errors', 1);
  require_once('/var/aegir/drupal-6.22/sites/oahealth.resonancedev.ca/modules/soapclient/modules/soapclient/nusoap/nusoap.php');
  $wsdl = './sites/oahealth.resonancedev.ca/modules/oahealthportal/ping.wsdl';
  $client = new nusoap_client($wsdl, 'wsdl');
  $client->decode_utf8 = false;
  $client->xml_encoding = 'UTF-8';
  $client->soap_defencoding = 'UTF-8';
  $client->setCredentials('weblogic', '0ATraining');
  $err = $client->getError();
  if ($err) {
    dsm($err, 'SOAP Client Error');
  }

  $result = $client->call($method, array(), 'http://tempuri.org', '', $header);
  if ($client->error_str) {
    dsm($client->error_str, 'SOAP Error');
  }

  dsm($client, '$client, post call()');
  dsm($result, 'Results');
  return $result;
}

/**
 * SOAP interface for Job Search
 */
function oa_portal_soap_ping_server() {
  $params = array();
  $results = oa_portal_soap('pingServer', $params);
  
  if (is_array($results)) {
    dsm($results, 'SOAP $results');
    return $results;
  }
  return array();
}
